    <select id="focus">
      <option value="Bodyweight Mastery">Bodyweight Mastery</option>
      <option value="Hypertrophy">Hypertrophy</option>
      <option value="Endurance">Endurance</option>
      <option value="Athleticism">Athleticism</option>
