  <script>
    function generatePlan() {
      const focus = document.getElementById("focus").value;
      let output = "";

      if (focus === "Bodyweight Mastery") {
        output = "Day 1: Pull-ups, Inverted Rows, Hollow Holds\n" +
                 "Day 2: Push-ups, Pike Push-ups, Dips\n" +
                 "Day 3: Core Circuit + Leg Raises + L-Sits\n" +
                 "Day 4: Active Rest (Mobility)\n" +
                 "Day 5-6: Repeat\n" +
                 "Day 7: Recovery";
      } else if (focus === "Hypertrophy") {
        output = "Day 1: Push Focus – Bench, Incline DB, Flyes\n" +
                 "Day 2: Pull Focus – Rows, Pull-ups, Curls\n" +
                 "Day 3: Legs – Squats, Lunges, Hamstring Curls\n" +
                 "Day 4: Rest\n" +
                 "Day 5-6: Full Body High Volume\n" +
                 "Day 7: Mobility + Recovery";
      } else if (focus === "Endurance") {
        output = "Day 1: 30 Min Run + Core Circuit\n" +
                 "Day 2: HIIT Bodyweight Circuit\n" +
                 "Day 3: Rucking or Weighted Walk\n" +
                 "Day 4: Bag Work + Shadowboxing\n" +
                 "Day 5: Burpee Ladder\n" +
                 "Day 6: Zone 2 Endurance\n" +
                 "Day 7: Rest";
      } else if (focus === "Athleticism") {
        output = "Day 1: Sprint Drills + Plyos\n" +
                 "Day 2: Strength + Agility Ladder\n" +
                 "Day 3: Footwork + Explosiveness\n" +
                 "Day 4: Jump Technique + Resistance Sled\n" +
                 "Day 5-6: Mixed Athletic Circuits\n" +
                 "Day 7: Recovery and Mobility";
      }

      document.getElementById("planOutput").value = output;
    }
  </script>
